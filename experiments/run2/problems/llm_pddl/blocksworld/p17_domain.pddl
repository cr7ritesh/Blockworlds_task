(define (domain block-world)
  (:requirements :strips :equality)
  (:types block arm)
  (:predicates (clear ?x)
               (on-table ?x)
               (holding ?x ?y)
               (on-top-of ?x ?y))
  (:functions (total-cost))
  (:action pickup
    :parameters (?b - block ?a - arm)
    :precondition (and (clear ?b) (empty ?a))
    :effect (and (holding ?b ?a)
                 (not (clear ?b))
                 (not (empty ?a))
                 (not (on-table ?b))))
    :cost 10)
  (:action putdown
    :parameters (?b - block ?a - arm)
    :precondition (holding ?b ?a)
    :effect (and (empty ?a)
                 (clear ?b)
                 (on-table ?b)
                 (not (holding ?b ?a))))
    :cost 10)
  (:action stack
    :parameters (?top - block ?bottom - block ?a - arm)
    :precondition (and (holding ?top ?a) (clear ?bottom))
    :effect (and (on-top-of ?top ?bottom)
                 (empty ?a)
                 (not (clear ?bottom))
                 (not (holding ?top ?a))))
    :cost 5)
  (:action unstack
    :parameters (?top - block ?bottom - block ?a - arm)
    :precondition (and (clear ?top) (empty ?a))
    :effect (and (holding ?top ?a)
                 (clear ?bottom)
                 (not (on-top-of ?top ?bottom))))
    :cost 5)
  (:action move
    :parameters ()
    :precondition ()
    :effect (and (increase (total-cost) 1))))