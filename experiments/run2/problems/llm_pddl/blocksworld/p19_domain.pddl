(define (domain block-world)
  (:requirements :strips :equality)
  (:types block arm)
  (:predicates (clear ?x)
               (on-table ?x)
               (holding ?x ?y)
               (on-top-of ?x ?y))
  (:functions (total-blocks))
  (:action pickup
    :parameters (?b - block)
    :precondition (and (clear ?b) (arm ?a))
    :effect (and (not (clear ?b))
                 (not (arm ?a))
                 (holding ?a ?b)))
  (:action putdown
    :parameters (?b - block ?a - arm)
    :precondition (holding ?a ?b)
    :effect (and (clear ?b)
                 (arm ?a)
                 (not (holding ?a ?b))))
  (:action stack
    :parameters (?b1 ?b2 - block)
    :precondition (and (holding ?arm ?b1) (clear ?b2) (arm ?arm))
    :effect (and (on-top-of ?b1 ?b2)
                 (not (clear ?b2))
                 (not (holding ?arm ?b1))
                 (arm ?arm)))
  (:action unstack
    :parameters (?b1 ?b2 - block ?a - arm)
    :precondition (and (on-top-of ?b1 ?b2) (clear ?b1) (arm ?a))
    :effect (and (not (on-top-of ?b1 ?b2))
                 (clear ?b2)
                 (holding ?a ?b1)
                 (not (arm ?a)))))